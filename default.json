{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",

	"extends": [
		"config:recommended",
		":configMigration",
		":disableDependencyDashboard",
		":widenPeerDependencies",
		"docker:pinDigests",
		"group:linters",
		"group:test",
		"group:vite",
		"helpers:pinGitHubActionDigestsToSemver",
		"mergeConfidence:all-badges",
		"workarounds:all",
		"security:openssf-scorecard"
	],

	"rangeStrategy": "bump",

	"ignorePaths": ["**/node_modules/**"],

	"minimumReleaseAge": "4 days",

	"schedule": ["* * 1-2,15-16 * *"],

	"postUpdateOptions": ["pnpmDedupe"],

	"packageRules": [
		{
			"groupName": "github-actions",
			"matchManagers": ["github-actions"]
		},

		{
			"groupName": "astro",
			"matchDatasources": ["npm"],
			"matchPackageNames": ["astro", "@astrojs/**", "prettier-plugin-astro"]
		},

		{
			"groupName": "changesets",
			"matchDatasources": ["npm"],
			"matchPackageNames": ["@changesets/**"]
		},

		{
			"groupName": "expressive-code",
			"matchDatasources": ["npm"],
			"matchSourceUrls": ["https://github.com/expressive-code/expressive-code"]
		},

		{
			"groupName": "Unified",
			"description": "Groups updates for packages from the unified ecosystem (https://unifiedjs.com/)",
			"matchDatasources": ["npm"],
			"matchSourceUrls": [
				"https://github.com/mdx-js/**",
				"https://github.com/micromark/**",
				"https://github.com/rehypejs/**",
				"https://github.com/remarkjs/**",
				"https://github.com/retextjs/**",
				"https://github.com/syntax-tree/**",
				"https://github.com/unifiedjs/**",
				"https://github.com/vfile/**"
			]
		},

		{
			"description": "Donâ€™t update Node.js engines field (needed because of the use of rangeStrategy: 'bump' above)",
			"matchPackageNames": ["node"],
			"matchManagers": ["npm"],
			"matchDepTypes": ["engines"],
			"enabled": false
		}
	]
}
